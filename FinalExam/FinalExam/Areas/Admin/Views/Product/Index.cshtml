@model List<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        <a class="btn btn-primary" asp-action="Create" asp-controller="Product">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>FullName</th>
                        <th>ProfileImage</th>
                        <th>Department</th>
                        <th colspan="2">Action</th>

                    </tr>
                </thead>

                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.FullName</td>
                        <td><img src="~/imgs/products/@item.ProfileImageUrl" width="70" /></td>
                        <td>@item.Department.Name</td>
                        <td><a class="btn btn-success" asp-action="Update" asp-controller="Product" asp-route-id="@item.Id">Update</a></td>
                        <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">Delete</a></td>

                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>


